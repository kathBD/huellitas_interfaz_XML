<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <!-- Botón principal -->
    <style name="BotonPrincipal">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:cornerRadius">10dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Botón secundario -->
    <style name="BotonSecundario" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
    </style>

    <style name="ButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="BotonCategoriaDirecto" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>





</resources>
